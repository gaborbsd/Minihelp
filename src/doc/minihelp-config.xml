<minihelp xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../main/xsd/minihelp.xsd">

	<!-- The title of the root node that encompasses the whole documentation. -->
	<title>Minihelp Documentation</title>

	<!-- Target ID of the welcome document. -->
	<homeID>intro</homeID>

	<!-- Mapping of document identifiers to URLs. -->
	<map target="configure" url="config.html" />

	<!-- A list of documents that are shown in the TOC. -->
	<tocitem target="intro" text="Introduction" />
	<tocitem target="using" text="Using Minihelp">
		<!-- The TOC is hierarchical so subsections are allowed as well. -->
		<tocitem target="obtain" text="Obtaining Minihelp" />
		<tocitem target="prereq" text="Prerequisites" />
		<tocitem target="compile" text="Compiling Minihelp" />
		<tocitem target="configure" text="Configuring Minihelp" />
