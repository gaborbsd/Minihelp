	</tocitem>
	<tocitem target="contact" text="Contact" />
	<tocitem target="license" text="License" />


	<!-- Indexitems are hierarchial and will be displayed in the main keyword 
		index list, sorted alphabetically. -->
	<indexitem text="Introduction" target="intro">
		<!-- There may be secondary indexterms, which are rendered indented. -->
		<indexitem text="Motivation" target="intro"/>
		<indexitem text="Features" target="intro"/>
	</indexitem>
	<indexitem text="Running">
		<!-- Indexentries are not displayed in the keyword index list
		but listed below when the parent keyword is selected. -->
		<indexentry target="run-cmd" text="Running from Command-line" />
		<indexentry target="run-prog" text="Running Programmatically"/>
	</indexitem>
